<!-- views/contacts/index.ejs -->

<!DOCTYPE html>
<html>
 <head>
    <!-- <% include %>를 사용해서 외부 ejs(head와 nav)를 가져왔습니다. -->
  <% include ../partials/head %> <!-- 1 -->
 </head>
 <body>
  <% include ../partials/nav %> <!-- 2 -->

  <div class="contact contact-index">
   <h2>Index</h2>
   <ul>
    <% contacts.forEach(function(contact) { %> <!-- 3 -->
     <li>
        <!-- 이름에 a tag를 추가하여 show action과 연결 -->
        <a href="/contacts/<%= contact._id %>"><%= contact.name %></a> 
     </li>
    <% }) %>
   </ul>
  </div>
 </body>
</html>